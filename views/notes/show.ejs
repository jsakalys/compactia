<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-8">
                <div id="noteInfo" class="card">
                    <div class="header">
                        <h4 class="title">Note Details
                            <button class="btn btn-simple edit">
                        		<small><i class="pe-7s-note"></i> Edit</small>
                        	</button>
                        </h4>
                    </div>
                    <div class="content">
                         <form action="" class="put-form">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Title <small>(required)</small></label>
                                        <input type="text" class="form-control" name="title" value="<%= note.title %>" readonly>
                                        <!-- Hidden ID to identify correct character in DB -->
                                        <input type="hidden" class="form-control" name="id" value="<%= note.id %>">
                                    </div>        
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Body</label>
                                        <textarea rows="15" class="form-control" name="body" readonly><%= note.body %></textarea>
                                    </div>        
                                </div>
                            </div>
                            <input type="submit" class="btn btn-info btn-fill pull-right hidden save saveChanges" value="Save Changes">
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>                    
    </div>
</div>