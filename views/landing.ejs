<!-- The following HTML was taken from Creative Tim's login and register modal and edited by me -->
<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <% if (!currentUser) { %>
            <a class="btn big-login pull-right" data-toggle="modal" href="javascript:void(0)" onclick="openLoginModal();">Log In</a>
            <h5 class="pull-right text-muted">
                Already have an account?
            </h5>
            <% }; %>
            <% if (currentUser) { %>
            <a class="btn big-login pull-right" data-toggle="modal" href="/logout">Log Out</a>
            <% }; %>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="content">
                <h1>
                    <i class="pe-7s-notebook"></i>
                    Compactia
                    <small>A compact RPG manager</small>
                </h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="jumbotron">
                <h2>
                    Compactia is a browser-based campaign manager for role-players and story gamers.
                </h2>
                <p>Sign up and start exploring some of its amazing features.</p>
                <p>
                    <a class="btn big-register" data-toggle="modal" href="javascript:void(0)" onclick="openRegisterModal();">Sign Up</a>
                </p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 text-right text-muted">
            <div class="content">
                Copyright &copy; 2015 <a href="http://juliesakalys.com">Julie Sakalys</a>
            </div>
        </div>
    </div>
	<div class="modal fade login" id="loginModal">
	    <div class="modal-dialog login animated">
			<div class="modal-content">
		        <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Log in</h4>
                </div>
                <div class="modal-body">
                    <div class="box">
                         <div class="content">
                            <div class="social pull-left">
                                <a id="facebook_login" class="circle facebook" href="/passport/facebook">
                                    <i class="fa fa-facebook fa-fw"></i>
                                </a>
                                <p class="pull-right" style="margin-top: 15px">
                                    Log in with Facebook
                                </p>
                            </div>
                            <div class="division">
                                <div class="line l"></div>
                                  <span>or</span>
                                <div class="line r"></div>
                            </div>
                            <div class="error"></div>
                            <div class="form loginBox">
                                <form method="POST" action="/login" class="login-form" accept-charset="UTF-8">
                                	<input id="email" class="form-control" type="text" placeholder="Email" name="email" required>
                                	<input id="password" class="form-control" type="password" placeholder="Password" name="password" required>
                                	<input class="btn btn-default btn-login" type="submit" value="Login">
                                </form>
                            </div>
                         </div>
                    </div>
                    <div class="box">
                        <div class="content registerBox" style="display:none;">
                            <div class="form">
                            	<form method="POST" html="{:multipart=>true}" data-remote="true" action="/signup" accept-charset="UTF-8">
                                    <label for="name" class="hidden">Your Name</label>
                                    <input id="name" class="form-control" type="text" placeholder="Your name" name="name" required>
                                    <label for="email" class="hidden">Your Email</label>
                                    <input id="email" class="form-control" type="text" placeholder="Your email" name="email" required>
                                    <label for="password" class="hidden">Enter a Password</label>
                                    <input id="password" class="form-control" type="password" placeholder="Enter a password" name="password" required>
                                    <label for="name" class="hidden">Re-enter Password</label>
                                    <input id="password2" class="form-control" type="password" placeholder="Re-enter password" name="password2" required>
                                    <input class="btn btn-default btn-register" type="submit" value="Create account" name="commit">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="forgot login-footer">
                        <span>Need to <a href="javascript: showRegisterForm();">create an account</a>?
                        </span>
                    </div>
                    <div class="forgot register-footer" style="display:none">
                         <span>Already have an account?</span>
                         <a href="javascript: showLoginForm();">Login</a>
                    </div>
                </div>        
		    </div>
	    </div>
	</div>
</div>