            <div class="col-sm-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">New Character</h4>
                    </div>
                    <div class="content">
                        <form>
                            <div class="row">
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <label>Name <small>(required)</small></label>
                                        <input type="text" class="form-control" placeholder="Ex. Legolas" value="">
                                    </div>        
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Exp</label>
                                        <input type="number" class="form-control" placeholder="0" value="">
                                    </div>        
                                </div>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label>Gold</label>
                                        <input type="number" class="form-control" placeholder="0" value="">
                                    </div>        
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Race</label>
                                        <input type="text" class="form-control" placeholder="ex. Elf" value="">
                                    </div>        
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Class</label>
                                        <input type="text" class="form-control" placeholder="ex. Ranger" value="">
                                    </div>        
                                </div>
                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <label>Birthplace</label>
                                        <input type="text" class="form-control" placeholder="ex. Mirkwood" value="">
                                    </div>        
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea rows="10" class="form-control" placeholder="A description of your character" value=""></textarea>
                                    </div>        
                                </div>
                            </div>

                            <button type="submit" class="btn btn-info btn-fill pull-right">Create</button>
                            <div class="clearfix"></div>
