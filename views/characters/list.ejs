<div class="content">
    <div class="container-fluid">
        <div class="row">
            <% characters.forEach(function(character){ %>
            <div class="col-sm-4">
                <a href="/characters/<%= character.id %>">
                    <div class="card card-user">
                        <div class="image">
                            <img src="<%= characterImages[character.id].environment %>" alt="Environment for <%= character.name %>"/>   
                        </div>
                        <div class="content">
                            <div class="author">
                                <img class="avatar border-gray" src="<%= characterImages[character.id].profile %>" alt="Profile for <%= character.name %>"/>
                                <h4 class="title"><%= character.name %>
                                    <br>
                                    <small>
                                        <%= character.attribute['race'] %> <%= character.attribute['class'] %>
                                    </small>
                                </h4>
                                <button class="btn btn-simple" style="margin-top: 5px"><i class="pe-7s-<%= character.attribute['gender'].toLowerCase() %>"></i>
                                </button>
                            </div>  
                            <div class="col-sm-8 col-sm-offset-2">
                                <div class="center-block">
                                    <table class="stat-table">
                                        <tr>
                                            <td style="text-align: center; width: 30px">
                                                <i class="pe-7s-like"></i>
                                            </td>
                                            <td style="width: 60px">
                                                <label>Health</label>
                                            </td>
                                            <td style="text-align: center; width: 30px">
                                                <label><%= character.attribute['hp'] %></label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: center; width: 30px">
                                                <i class="pe-7s-shield"></i>
                                            </td>
                                            <td style="width: 60px">
                                                <label>Defense</label>
                                            </td>
                                            <td style="text-align: center">
                                                <label><%= character.attribute['def'] %></label>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-xs-4 text-left">
                                <button class="btn btn-simple">
                                    <i class="pe-7s-medal"></i> <label><%= character.exp %></label>
                                </button>
                            </div>
                            <div class="col-xs-4 text-center">
                                <button class="btn btn-simple">
                                    <i class="pe-7s-more"></i>
                                </button>
                            </div>
                            <div class="col-xs-4 text-right">
                                <button class="btn btn-simple">
                                    <i class="pe-7s-diamond"></i> <label><%= character.gold %></label>
                                </button>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <% }); %>  
        </div>                       
    </div> 
</div>