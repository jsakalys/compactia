<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">New Character</h4>
                    </div>
                    <div class="content">
                         <form action="" method="POST">
                            <div class="row">
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <label>Name <small>(required)</small></label>
                                        <input id="newCharacterName" type="text" class="form-control" name="name" placeholder="Ex. Legolas">
                                        <!-- Hidden input for user ID -->
                                         <input type="hidden" class="form-control" name="id" value="3">
                                    </div>        
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Exp</label>
                                        <input id="newCharacterExp" type="number" class="form-control" min="0" step="1" name="exp" placeholder="0">
                                    </div>        
                                </div>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label>Gold</label>
                                        <input id="newCharacterGold" type="number" class="form-control" min="0" step="1" name="gold" placeholder="0">
                                    </div>        
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Race</label>
                                        <input id="newCharacterRace" type="text" class="form-control" name="race" placeholder="ex. Elf">
                                    </div>        
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Gender</label>
                                        <input id="newCharacterGender" type="text" class="form-control" name="gender" placeholder="ex. Male">
                                    </div>        
                                </div>
                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <label>Birthplace</label>
                                        <input type="text" class="form-control" name="birthplace" placeholder="ex. Lorien">
                                    </div>        
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <label>Class</label>
                                        <input id="newCharacterClass" type="text" class="form-control" name="class" placeholder="Ex. Ranger">
                                    </div>        
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label>Hit Points</label>
                                        <input id="newCharacterHealth" type="number" class="form-control" step="1" name="hp" placeholder="0">
                                    </div>        
                                </div>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label>Defense</label>
                                        <input id="newCharacterDefense" type="number" class="form-control" min="0" step="1" name="def" placeholder="0">
                                    </div>        
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea rows="15" class="form-control" name="desc" placeholder="A description of your character"></textarea>
                                    </div>        
                                </div>
                            </div>
                            <input type="submit" class="btn btn-info btn-fill pull-right" value="Create">
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card card-user">
                    <div class="image">
                        <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" alt="..."/>   
                    </div>
                    <div class="content">
                        <div class="author">
                            <img class="avatar border-gray" src="/img/default-avatar.png" alt="Default Profile"/>
                            <h4 class="title">
                                <span id="newCharacterNameCard">Legolas</span>
                                <br>
                                <small id="newCharacterRaceCard">Elf</small> 
                                <small id="newCharacterClassCard">Ranger</small>
                            </h4>
                            <button id="newCharacterGenderCard" class="btn btn-simple" style="margin-top: 5px">
                                <i class="pe-7s-male"></i>
                            </button>
                        </div>
                        <div class="col-sm-8 col-sm-offset-2">
                            <div class="center-block">
                                <table class="stat-table">
                                    <tr>
                                        <td style="text-align: center; width: 30px">
                                            <i class="pe-7s-like"></i>
                                        </td>
                                        <td style="width: 60px">
                                            <label>Health</label>
                                        </td>
                                        <td style="text-align: center; width: 30px">
                                            <label id="newCharacterHealthCard">0</label>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: center; width: 30px">
                                            <i class="pe-7s-shield"></i>
                                        </td>
                                        <td style="width: 60px">
                                            <label>Defense</label>
                                        </td>
                                        <td style="text-align: center">
                                            <label id="newCharacterDefenseCard">0</label>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                    	<div class="col-xs-4 text-left">
                        	<button class="btn btn-simple">
                        		<i class="pe-7s-medal"></i> 
                                <label id="newCharacterExpCard">0</label>
                        	</button>
                        </div>
                        <div class="col-xs-4 text-center">
                        	<button class="btn btn-simple">
                                <i class="pe-7s-more"></i>
                        	</button>
                        </div>
                        <div class="col-xs-4 text-right">
                        	<button class="btn btn-simple">
                        		<i class="pe-7s-diamond"></i> 
                                <label id="newCharacterGoldCard">0</label>
                        	</button>
                        </div>
                    </div>
                </div>
            </div>       
        </div>                    
    </div>
</div>