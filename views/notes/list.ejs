<div class="content">
    <div class="container-fluid">
        <div class="row">                   
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Campaign Notes
                            <a href="/notes/new/<%= campaign.identifier %>" class="btn btn-simple">
                        		<small><i class="pe-7s-note"></i> Add New</small>
                        	</a>
                        </h4>
                        <p class="category">All notes for <%= campaign.name %></p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                            	<th>Title</th>
                                <th>Author</th>
                            	<th>Body</th>
                            	<th>Created</th>
                            	<th>Updated</th>
                            </thead>
                            <tbody>
                        	<% notes.forEach(function(note){ %>
                            	<tr>
                                	<td>
                                		<a href="/notes/<%= note.title %>/<% campaign.identifier%>">
                                			<%= note.title.substr(0, 24) %>
                                		</a>
                                	</td>
                                    <td><%= note.author %></td>
                                	<td><%= note.body.substr(0, 16); %></td>
                                	<td><%= note.createdAt %></td>
                                	<td><%= note.updatedAt %></td>
                                </tr>
                         	<% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>