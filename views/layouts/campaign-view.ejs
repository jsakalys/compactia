<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Compactia - A compact RPG manager</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/img/favicon.ico">
    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <!-- Font Awesome -->
    <link href="/bootstrap3/css/font-awesome.min.css" rel="stylesheet">
    <!-- 7 Stroke -->
    <link href="/css/pe-icon-7-stroke.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link href="/bootstrap3/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Animation library for notifications -->
    <link href="/css/animate.min.css" rel="stylesheet"/>
    <!-- Creative Tim CSS -->
    <link href="/css/light-bootstrap-dashboard.css" rel="stylesheet"/>
    <!-- Custom CSS -->
    <style>
        .dropdown-menu .divider {
            margin: 0px 5px;
        }
    </style>
</head>
<body> 
<div class="wrapper">
    <div class="sidebar" data-color="green" data-image="/img/sidebar-5.jpg">    
    <!--   
        Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple" 
        Tip 2: you can also add an image using data-image tag   
    -->
    	<div class="sidebar-wrapper">
            <div class="logo">
                <a href="/campaigns/show" class="simple-text">
                    Campaign Name
                </a>
            </div>       
            <ul class="nav">
                <li>
                    <a href="/dash">
                        <i class="pe-7s-notebook"></i> 
                        <p>Main</p>
                    </a>            
                </li>
                <li>
                    <a href="/notifications">
                        <i class="pe-7s-bell"></i> 
                        <p>Activity</p>
                    </a>        
                </li>
                <li>
                    <a href="/notes">
                        <i class="pe-7s-note2"></i> 
                        <p>Notes</p>
                    </a>        
                </li>
                <li>
                    <a href="/characters">
                        <i class="pe-7s-users"></i> 
                        <p>Players</p>
                    </a>
                </li> 
                <li>
                    <a href="/">
                        <i class="pe-7s-news-paper"></i> 
                        <p>Story</p>
                    </a>        
                </li>
                <li>
                    <a href="/maps">
                        <i class="pe-7s-map-2"></i> 
                        <p>Maps</p>
                    </a>        
                </li>
            </ul> 
    	</div>
    </div>
    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">    
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Compactia</a>
                </div>
                <div class="collapse navbar-collapse">       
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-dashboard"></i>
                            </a>
                        </li>
                        <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-globe"></i>
                                    <b class="caret"></b>
                                    <span class="notification">5</span>
                              </a>
                              <ul class="dropdown-menu">
                                <li><a href="#">Notification 1</a></li>
                                <li><a href="#">Notification 2</a></li>
                                <li><a href="#">Notification 3</a></li>
                                <li><a href="#">Notification 4</a></li>
                                <li><a href="#">Notification 5</a></li>
                              </ul>
                        </li>
                        <li>
                           <a href="">
                                <i class="fa fa-search"></i>
                            </a>
                        </li> 
                    </ul>
                    
                    <ul class="nav navbar-nav navbar-right">
                         <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    My Characters
                                    <b class="caret"></b>
                              </a>
                              <ul class="dropdown-menu">
                                <li><a href="/characters/show">Character 1</a></li>
                                <li><a href="/characters/show">Character 2</a></li>
                                <li><a href="/characters/show">Character 3</a></li>
                                <li><a href="/characters/show">Character 4</a></li>
                                <li><a href="/characters/show">Character 5</a></li>
                                <li class="divider"></li>
                                <li><a href="/characters/new">New Character</a></li>
                              </ul>
                        </li>
                        <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    My Campaigns
                                    <b class="caret"></b>
                              </a>
                              <ul class="dropdown-menu">
                                <li><a href="/campaigns/show">Campaign 1</a></li>
                                <li><a href="/campaigns/show">Campaign 2</a></li>
                                <li><a href="/campaigns/show">Campaign 3</a></li>
                                <li><a href="/campaigns/show">Campaign 4</a></li>
                                <li><a href="/campaigns/show">Campaign 5</a></li>
                                <li class="divider"></li>
                                <li><a href="/campaigns/new">New Campaign</a></li>
                              </ul>
                        </li>
                        <li>
                            <a href="/user/<%= currentUser.email %>">
                               My Account
                            </a>
                        </li>
                        <li>
                            <a href="/logout">
                                Log out
                            </a>
                        </li> 
                    </ul>
                </div>
            </div>
        </nav>
        <%- body %>
    </div>
</div>
</body>
    <!-- jQuery JS -->
    <script src="/jquery/jquery-1.10.2.js" type="text/javascript"></script>
    <!-- Bootstrap JS -->
    <script src="/bootstrap3/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/bootstrap3/js/bootstrap-checkbox-radio-switch.js" type="text/javascript"></script>
    <!-- My JS -->
    <script src="/js/myScript.js"></script>
    <!--  Charts Plugin -->
    <script src="/js/chartist.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="/bootstrap3/js/bootstrap-notify.js"></script>
    <!--  Google Maps Plugin    -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <!-- Creative Tim JS -->
    <script src="/js/light-bootstrap-dashboard.js"></script>
