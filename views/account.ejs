<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
				<div id="accountInfo" class="card">
				    <div class="header">
				        <h4 class="title">My Account
				            <button class="btn btn-simple edit">
				        		<small><i class="pe-7s-note"></i> Edit</small>
				        	</button>
				        </h4>
	    			</div>
					<div class="content">
				        <div class="row">
				            <div class="col-sm-7">
				                <form enctype="multipart/form-data" action="" class="put-form">
				                	<div class="form-group">
				                    	<label>Name <small>(required)</small></label>
				                    	<input type="text" class="form-control" name="name" value="<%= currentUser.name %>" readonly>
				                    	<!-- Hidden ID -->
				                    	<input type="hidden" class="form-control" name="id" value="<%= currentUser.id %>">
				                	</div>
				                	<div class="form-group">
				                    	<label>E-mail <small>(required)</small></label>
				                    	<input type="email" class="form-control" name="email" value="<%= currentUser.email %>" readonly>
				                	</div>
				                	<input type="submit" class="btn btn-info btn-fill pull-right hidden save saveChanges" value="Save Changes">
				                </form>
				            </div>
				            <div class="col-sm-5">
					            <img src="<%= userPic %>" class="img-circle center-block userPic"> 
					        	<div class="clearfix"></div>
					        </div>
				        </div>
					    <div class="row">
				        	<div class="col-sm-7">
				                <div class="form-group">
				                    <label>Profile Picture</label>
				                    	<form enctype="multipart/form-data" action="" method="POST">
					                    	<div class="input-group">
		        								<input type="file" class="form-control" name="userPicture">
		        								<span class="input-group-btn">
	    											<button class="btn btn-fill btn-default" type="submit">Upload</button>
	  											</span>
	  										</div>
		        						</form>
					  				<div class="clearfix"></div>
					            </div>
					        </div>
					        <div class="col-sm-5">
					        	<div class="text-center">
					        		<h4><%= currentUser.name %></h4>
					        	</div>
					        </div>
					    </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
